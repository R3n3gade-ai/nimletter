#proc nimfOptinUnubscribe(userUUID, name, email: string, unsubscribeFromAll: bool = false): string =
<html>
  <head>
    <title>Nimletter</title>
    <link rel="icon" type="image/x-icon" href="/assets/favicon/favicon.ico">

    <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/roboto-v47-latin-300.woff2" crossorigin/>
    <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/roboto-v47-latin-regular.woff2" crossorigin/>
    <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/roboto-v47-latin-500.woff2" crossorigin/>

    <link rel="stylesheet" href="/assets/css/main.css">
  </head>
  <body class="mainbody">
    <main>
      <div class="content notLoggedIn" style="max-width: 300px;text-align: center;">
        <h1 id="heading" class="center" style="font-weight: 500;">Unsubscribed</h1>
        <div class="mb30" style="display: flex;">
          <div>
            <p>Sorry to see you go, <b>${name}</b>!</p>
            # if unsubscribeFromAll:
            <p>We have unsubscribed you from all our lists.</p>
            # else:
            <p>We have unsubscribed you from this list.</p>
            # end if
          </div>
        </div>
        # if userUUID != "":
        <div id="work">
          <div>
            <div class="buttonArea">
              <button onclick="window.location.href='/subscribe/optin?userUUID=${userUUID}'" class="buttonIcon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
                <div class="ml5">Subscribe again</div>
              </button>
            </div>
          </div>
        </div>
          # if not unsubscribeFromAll:
          <div>
            <p>Unsubscribe from all lists and all emails by clicking <a href="/unsubscribe?contactUUID=${userUUID}&unsubscribeFromAll=true">here</a>.</p>
          </div>
          # end if
        # end if
      </div>
    </main>
  </body>
</html>
#end proc